<!DOCTYPE html>
<html ng-app="myApp">
  <header>
    <title>My Apps</title>
    <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.0.1/angular.js"></script>
    <script language="javascript" type="text/javascript">
      angular.module('myApp', []);
      
      //Whatever you put on the controller scope,
      //will be availalble in the HTML element bound to the controller.
      function MyController($scope){
        $scope.newMessage = "Hi";
        $scope.messages = ["What's up?", "Yo!"]; 
        //$scope.count = messages.length;
        $scope.add = function(){
          $scope.messages.push($scope.newMessage);
        };
        
        if($scope.messages.length>1){
          $scope.g = "are";
        }else{
          $scope.g = "is";
        }
        
        $scope.count = function(){
          var i = 0;
          i++;
          return i;
        }
        
        
        
      }

    </script>
  </header>
  
  <body ng-controller="MyController">
    {{messages.length}} {{g}} recorded. <br><br>
    
    Tell me a fruit name:
    <input type="text" ng-model="newMessage">
    <input type="submit" ng-click="add()" value="new message">
    
    <br>
    Messages: <br>
    <ul>
      <li ng-repeat="thing in messages">
        {{thing}} <button ng-click="messages.splice(messages.indexOf(thing),1)">delete</button>
      </li>
    </ul>
    
  </body>
  
</html>
